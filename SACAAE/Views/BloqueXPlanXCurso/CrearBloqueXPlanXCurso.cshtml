@model SACAAE.Models.BloqueXPlanXCurso

@{
    ViewBag.Title = "Agregar Curso a Bloque Academico";
    Layout = "~/Views/Shared/Privado.cshtml";
}

<h2>Agregar Curso a Bloque Académico</h2>
@if (TempData.ContainsKey("MessageError"))
{
    <p class="text-danger">@TempData["MessageError"].ToString()</p>
}
@if (TempData.ContainsKey("MessageSuccess"))
{
    <p class="text-success">@TempData["MessageSuccess"].ToString()</p>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <label>Plan de Estudios</label>
        <br />
        <div class="selectpicker">
            <select name="selectPlanDeEstudio" id="selectPlanDeEstudio">
                @foreach (var item in ViewBag.Planes)
                {
                    <option value="@item.ID">@item.Nombre</option>
                }
            </select>
        </div>
        <br />
        <label>Bloques Académicos</label>
        <br />
        <div class="selectpicker">
            <select name="selectBloqueAcademico" id="selectBloqueAcademico">
                @foreach (var item in ViewBag.Bloques)
                {
                    <option value="@item.ID">@item.Descripcion</option>
                }
            </select>
        </div>
        <br />
        <label>Cursos</label>
        <br />
        <div class="selectpicker">
            <select name="selectCurso" id="selectCurso">
                @foreach (var item in ViewBag.Cursos)
                {
                    <option value="@item.ID">@item.Nombre</option>
                }
            </select>
        </div>
        <br />
        <div class="editor-field">
            <input type="submit" value="Agregar" class="btn btn-default" />
        </div>
    </div>
}
