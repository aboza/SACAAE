@model SACAAE.Models.Curso

@{
    ViewBag.Title = "Planes";
    Layout = "~/Views/Shared/Privado.cshtml";
}



    <h2>Cursos</h2>
        @if (TempData.ContainsKey("MessageError"))
        {
            <p class="text-danger">@TempData["MessageError"].ToString()</p>
        }
        @if (TempData.ContainsKey("MessageSuccess"))
        {
            <p class="text-success">@TempData["MessageSuccess"].ToString()</p>
        }
            @using (Html.BeginForm())
{
     <div class="row-fluid">
    <div class="col-lg-5">
        <div class="span12">
            <table id="tablaCurso" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HorasTeoricas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bloque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Externo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HorasPracticas)
        </th>
        <th></th>
    </tr>
                @foreach (var item in ViewBag.Cursos)
    {
                <tr>
            <td>
                @item.Nombre
            </td>
            <td>
                @item.Codigo
            </td>
            <td>
                @item.HorasTeoricas
            </td>
            <td>
                @item.Bloque
            </td>
            <td><input type="checkbox" value=@item.Externo disabled>
                @item.Externo
            </td>
            <td>
                @item.HorasPracticas
            </td>
                    <td>@Html.ActionLink("Editar", "ModificarCurso","Courses", new { id = @item.ID },null)</td>
        </tr>
    }

    

</table>
    </div>
    </div>
        </div>
<br />
    }
